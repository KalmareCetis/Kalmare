<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InfoAns"
    android:background="@color/base"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Conoce un poco más"
        android:textStyle="italic"
        android:fontFamily="times"
        android:textAlignment="center"
        android:textColor="#1f82b1"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#69bce3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anx1"
                android:background="@color/base"
                android:padding="10dp"
                android:onClick="sint"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué sintomas puede tener un ataque de ansiedad?"
                android:textAlignment="center"
                android:textColor="#1f82b1"
                android:textSize="15sp"
                android:fontFamily="times"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base"
                android:onClick="cau"
                android:padding="10dp"
                app:srcCompat="@drawable/anx2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Cuáles suelen ser las causas de la ansiedad?"
                android:textAlignment="center"
                android:textColor="#1f82b1"
                android:textSize="15sp"
                android:fontFamily="times"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/psico"
                android:background="@color/base"
                android:padding="10dp"
                android:onClick="psic"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La psicología de los colores de Kalmare"
                android:textAlignment="center"
                android:textColor="#1f82b1"
                android:textSize="15sp"
                android:fontFamily="times"
                android:paddingBottom="40dp"/>

            <ImageButton

                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base"
                android:onClick="volv"
                android:padding="15dp"
                app:srcCompat="@drawable/home" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hogar"
                android:textAlignment="center"
                android:textColor="#1f82b1"
                android:textSize="18sp"
                android:fontFamily="times"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>