<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Sintomas"
    android:background="@color/base"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¿Qué sintomas suele tener un ataque de ansiedad?"
        android:textStyle="italic"
        android:fontFamily="times"
        android:textAlignment="center"
        android:textColor="#1f82b1"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#69bce3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La mente de cada persona es diferente, por lo que no todos tendrán los mismos síntomas de un ataque de ansiedad, pero algunos de los síntomas más comunes son:"
                android:textAlignment="center"
                android:textColor="#05244f"
                android:textSize="25sp"
                android:fontFamily="times"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="times"
                android:padding="10dp"
                android:text="1. Sensación de nerviosismo, agitación o tensión"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Aumento del ritmo cardíaco"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Respiración acelerada (hiperventilación)"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Sudoración"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Temblores"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Sensación de debilidad o cansancio"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Tener problemas para conciliar el sueño"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Padecer problemas gastrointestinales (GI)"
                android:textAlignment="center"
                android:textColor="@color/texto"
                android:textSize="22sp"
                android:fontFamily="times"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/atras"
                android:onClick="vuelve"
                android:paddingTop="35dp"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:textAlignment="center"
                android:textColor="#1f82b1"
                android:textSize="22sp"
                android:fontFamily="times"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>